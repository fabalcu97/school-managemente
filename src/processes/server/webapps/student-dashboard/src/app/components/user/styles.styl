.side-bar
    position: absolute;
    top: 10px;
    left: 5px;
    width: 150px;
    background: #ccc;

    .item
        border-bottom: 1px solid gray
        height: 35px
        text-align: center
.content
    position: absolute;
    left: 155px;
    top: 10px;
    height: calc(100% - 10px);
    width: calc(100% - 155px);
    .exams
        position: absolute
        width: 100%
        height: 100%
        .exam
            height: 30px;
            width: 100%;
            text-align: center;
            border-bottom: 1px solid gray 
            background: #666
            color: white

.modal
    width: 100%;
    position: absolute;
    height: 100%;
    .bg
        width: 100%;
        position: absolute;
        height: 100%;
        background: rgba(0, 0, 0, 0.5)
    .modal-container
        position: absolute;
        background: white;
        height: 500px;
        width: 400px;
        top: calc(50% - 250px);
        left: calc(50% - 250px);
        box-shadow: 0px 0px 9px 1px;
        .info
            width: 40%;
            outline: 1px solid red;
            height: 100%;
            input 
                width: 90%
            .questions
                .question
                    text-align: center
                    outline: 1px solid red
    
