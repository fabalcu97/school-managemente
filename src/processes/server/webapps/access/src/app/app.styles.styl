.container
    box-shadow: 0px 0px 15px 3px
    width: 250px
    left: calc(50% - 125px)
    top: 50px
    position absolute
    .form
        display: flex
        flex-direction: column
        padding: 5%
        input
            border: 0
            border-bottom: 1px solid gray
            padding: 10px
        input[type="submit"]
            border: 1px solid #808080;
            border-radius: 5px;
            margin-top: 25px;
            font-size: 15px;
            padding: 5px;
        
    .foot
        text-align: center

.logo
    img
        position: absolute
        height: 100%
        right: 0